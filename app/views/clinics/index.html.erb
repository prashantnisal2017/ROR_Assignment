<p id="notice"><%= notice %></p>

<h1>List of Clinics</h1>

<table>
  <thead>
    <tr>
      <th >Clinic</th>
      <th >Country</th>
      <th >city</th>
      <th >Number Of Doctors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td ><%= clinic.name %></td>
        <td ><%= clinic.country %></td>
        <td ><%= clinic.city %></td>
        <td ><%= clinic.doctors.count %></td>
        <td ><%= link_to 'show', clinic_path(clinic) %></td>
        <td ><%= link_to 'Edit', edit_clinic_path(clinic) %></td>
        <td ><%= link_to 'Delete', clinic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

