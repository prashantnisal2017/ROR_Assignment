<p id="notice"><%= notice %></p>

<h1>List of Drugs</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Name</th>
      <th colspan="3">Company</th>
      <th colspan="3">Target alignment</th>
      <th colspan="3">Side effect</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drugs.each do |drug| %>
      <tr>
        <td colspan="3"><%= drug.name %></td>
        <td colspan="3"><%= drug.company.name %></td>
        <td colspan="3"><%= drug.target_alignment %></td>
        <td colspan="3"><%= drug.side_effect %></td>
        <td><%= link_to 'Show', drug %></td>
        <td><%= link_to 'Edit', edit_drug_path(drug) %></td>
        <td><%= link_to 'Destroy', drug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

